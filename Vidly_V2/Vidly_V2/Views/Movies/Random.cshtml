@model Vidly_V2.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a multiple line comment

*@

@{
    var classname = Model.Customer.Count > 5 ? "popular" : null;
}

<h2 class="@classname"> @Model.Movies.Name</h2>

@if (Model.Customer.Count == 0)
{
    <text> No one has rented this movie before. </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


